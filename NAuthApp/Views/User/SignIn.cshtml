@model CredentialsModel
@{
    Layout = "_LayoutSignIn.cshtml";
}
<div class="form-signin glasscard">
    <div>
        <form asp-action="SignIn" class="m-4">
            <a asp-action="Index" asp-controller="Home" class="navbar-brand">
                <p class="mt-3 mb-3">
                    <img src="~/img/NAuthExpColor.png" height="56" />
                </p>
            </a>
            <h1 class="h3 mb-3 fw-normal">Войдите в аккаунт</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="userinput" />
                <label asp-for="Username" for="userinput"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="password" />
                <label asp-for="Password" for="password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="submit" value="Войти" class="w-100 btn btn-lg btn-primary" />
            </div>

            <p class="mt-3 mb-0 text-muted">&copy; 2023</p>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}