@model Account
@using System.Security.Claims;
@{
    ViewData["Title"] = "Аккаунт";
    Layout = "_LayoutAccount.cshtml";
}
<div class="modal" id="del-user" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header border-bottom-0">
                <h1 class="modal-title fs-5">Удаление аккаунта</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-0">
                <p>Ваш аккаунт будет мгновенно удалён. Действие необратимо.</p>
            </div>
            <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
                <form asp-action="Delete">
                    <input name="delete" value="true" hidden />
                    <button type="submit" class="btn btn-lg btn-danger w-100">Удалить</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="profile-header glasscard-profile">
    <div class="m-2">
        <div class="container-fluid mt-2 mb-3">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/img/NAuthShieldColor.png" height="48" style="margin-top: -2%;" />
                <span class="fs-5 text-black"><strong>Аккаунт</strong></span>
            </a>
        </div>
        <div class="">
            <div class="card" style="border-radius: 15px;">
                <div class="card-body m-1">
                    <div class="">
                        <img src="~/img/user.png" alt="photo" class="img-fluid" style="height: 56px; border-radius: 10px;">
                        <div class="lh-1 mt-1">
                            <h4 class="mb-0 lh-1">@Model.Surname @Model.Name @Model.LastName</h4>
                            <small><span class="text-muted">@@@Context.User.FindFirst(ClaimTypes.Upn)?.Value</span></small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container p-2">
                <div class="list-group mt-2">
                    <a href="#" class="list-group-item list-group-item-action container gap-2 py-2 text-start disabled" aria-current="true">
                        <img src="~/img/change.png" alt="twbs" height="28" class="flex-shrink-0">
                        <span class="ms-2">Сменить пароль</span>
                    </a>
                    <a asp-action="Edit" class="list-group-item list-group-item-action container gap-2 py-2 text-start" aria-current="true">
                        <img src="~/img/edit.png" alt="twbs" height="28" class="flex-shrink-0">
                        <span class="ms-2">Редактировать аккаунт</span>
                    </a>
                    <a asp-action="Raw" class="list-group-item list-group-item-action container gap-2 py-2 text-start" aria-current="true">
                        <img src="~/img/user.png" alt="twbs" height="28" class="flex-shrink-0">
                        <span class="ms-2">Получить данные</span>
                    </a>
                    <a asp-action="AllSignout" class="list-group-item list-group-item-action container gap-2 py-2 text-start" aria-current="true">
                        <img src="~/img/logout.png" alt="twbs" height="24" class="flex-shrink-0">
                        <span class="ms-2">Завершить все сессии</span>
                    </a>
                    <a data-bs-toggle="modal" data-bs-target="#del-user" href="#" class="list-group-item list-group-item-action container gap-2 py-2 text-start" aria-current="true">
                        <img src="~/img/remove-user.png" alt="twbs" height="28" class="flex-shrink-0">
                        <span class="ms-2 text-danger">Удалить аккаунт</span>
                    </a>
                </div>
                <form asp-action="UpdateAccount">
                    <div class="m-1 text-start text-muted"><small>Телефон</small></div>
                    <div class="input-group mb-1">
                        <input name="phone" type="tel" class="form-control rounded w-100" placeholder="Телефон" value="@Model.Phone">
                    </div>
                    <div class="m-1 text-start text-muted"><small>Email</small></div>
                    <div class="input-group mb-1">
                        <input name="email" type="email" class="form-control w-100 rounded" placeholder="Email" value="@Model.Email">
                    </div>
                    <button type="submit" class="btn btn-outline-success mt-2 w-100">Сохранить</button>
                </form>
            </div>
            <div class="container mt-2 p-2">
                <a asp-action="ThisSignout" class="btn btn-outline-danger w-100">Выйти</a>
            </div>
        </div>
    </div>
</div>